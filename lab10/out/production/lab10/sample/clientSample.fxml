<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="sample.clientController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
    <Label text="Message:" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>

    <Button text= "Send" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#clientnewMSG"></Button>
    <Button text= "Exit" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#exitClientS"></Button>

    <TextField promptText="username" fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
    <TextField promptText="message" fx:id="messageField" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField>

</GridPane>